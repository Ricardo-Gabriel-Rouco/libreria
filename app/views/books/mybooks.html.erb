<h1>Mis libros</h1>

<table class="table">
  <% @books.mybooks.in_groups_of(3) do |group| %>
    <div class="row">
      <% group.compact.each do |book| %>
        <div class="col-md-4">
          <%= image_tag book.image_url(:thumb) if book.image.present? %>
          <h4><%= link_to book.title, book %> </h4>
        </div>
        <% end %>
      </div>
      <% end %>
</table>