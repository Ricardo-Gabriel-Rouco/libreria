<%= form_with(model: book, local: true) do |form| %>
  <% if book.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(book.errors.count, "error") %> No se puede guardar el libro</h2>

      <ul>
      <% book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :Nombre %>
    <%= form.text_field :title, id: :book_title %>
  </div>

  <div class="field">
    <%= form.label :Autor %>
    <%= form.text_field :author, id: :book_author %>
  </div>

  <div class="field">
    <%= form.label :Comentario %>
    <%= form.text_area :comment, id: :book_comment %>
  </div>

  <div class="field">
    <%= form.label :Tapa %>
    <%= form.file_field :image, id: :book_image %>
  </div>

  <div class="field">
    <%= form.label :archivo %>
    <%= form.file_field :attachment, id: :book_attachment %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
